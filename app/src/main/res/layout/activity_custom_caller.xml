<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/colorPrimaryDark"
    android:weightSum="1"
    android:gravity="center">

    <Button
        android:id="@+id/loadButton"
        android:text="Load Caller"
        android:textColor="@color/colorAccent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp" />


    <TextView
        android:textSize="10pt"
        android:text="Caller Name:"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="#D5D7DB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/callerNameEditText"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="#D5D7DB"
        android:textColor="#D5D7DB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:textSize="10pt"
        android:text="Caller Number:"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textColor="#D5D7DB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/callerNumberEditText"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:backgroundTint="#D5D7DB"
        android:textColor="#D5D7DB"
        android:maxLength="14"
        android:inputType="phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ListView
        android:id="@+id/settingsList"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:background="#D5D7DB"
        android:textColor="#D5D7DB"
        android:layout_width="match_parent"
        android:layout_height="143dp">

    </ListView>
    <TextView
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:textSize="10pt"
        android:text="Add Image:"
        android:textColor="#D5D7DB"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

    <ImageButton
        android:id="@+id/addImageButton"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:scaleType="fitCenter"
        android:src="@drawable/add_image"
        android:layout_marginLeft="16dp" />


        <Button
            android:id="@+id/saveButton"
            android:text="Save"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>



    </LinearLayout>

    <Button
        android:id="@+id/startCustomCallButton"
        android:textColor="@color/colorAccent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:textSize="18dp"
        android:text="Start Call"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>